<?xml version="1.0" encoding="utf-8"?>

<GridLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="wrap_content"
android:layout_height="match_parent"
android:layout_gravity="center|top"
android:layout_marginTop="32dp"
android:columnCount="4">

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/a4Button"
    android:text="@string/a4"
    android:onClick="onMakeMove"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/b4Button"
    android:text="@string/b4"
    android:onClick="onMakeMove"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/c4Button"
    android:text="@string/c4"
    android:onClick="onMakeMove"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/d4Button"
    android:text="@string/d4"
    android:onClick="onMakeMove"
    />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/a3Button"
    android:text="@string/a3"
    android:onClick="onMakeMove"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/b3Button"
    android:text="@string/b3"
    android:onClick="onMakeMove"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/c3Button"
    android:text="@string/c3"
    android:onClick="onMakeMove"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/d3Button"
    android:text="@string/d3"
    android:onClick="onMakeMove"
    />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/a2Button"
    android:text="@string/a2"
    android:onClick="onMakeMove"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/b2Button"
    android:text="@string/b2"
    android:onClick="onMakeMove"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/c2Button"
    android:text="@string/c2"
    android:onClick="onMakeMove"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/d2Button"
    android:text="@string/d2"
    android:onClick="onMakeMove"
    />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/a1Button"
    android:text="@string/a1"
    android:onClick="onMakeMove"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/b1Button"
    android:text="@string/b1"
    android:onClick="onMakeMove"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/c1Button"
    android:text="@string/c1"
    android:onClick="onMakeMove"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/d1Button"
    android:text="@string/d1"
    android:onClick="onMakeMove"
    />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ok"
    android:id="@+id/okButton"
    android:layout_columnWeight="2"
    android:layout_columnSpan="2"
    android:onClick="onOk"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/cancelButton"
    android:text="cancel"
    android:onClick="onCancel"
    />
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/clrButton"
    android:text="clr"
    android:onClick="onClear"
    />

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/srcTView"
    android:text="first click source"
    android:layout_columnWeight="1"
    android:layout_columnSpan="2"
    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/dstTView"
    android:text="then click destination"
    android:layout_columnWeight="1"
    android:layout_columnSpan="2"
    />

</GridLayout>